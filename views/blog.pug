    .box-comment
        .comment
            .container
                .row
                    .btn-close
                        svg.svg-inline--fa.fa-xmark(aria-hidden='true' focusable='false' data-prefix='fas' data-icon='xmark' role='img' xmlns='http://www.w3.org/2000/svg' viewbox='0 0 320 512')
                            path(fill='currentColor' d='M310.6 361.4c12.5 12.5 12.5 32.75 0 45.25C304.4 412.9 296.2 416 288 416s-16.38-3.125-22.62-9.375L160 301.3L54.63 406.6C48.38 412.9 40.19 416 32 416S15.63 412.9 9.375 406.6c-12.5-12.5-12.5-32.75 0-45.25l105.4-105.4L9.375 150.6c-12.5-12.5-12.5-32.75 0-45.25s32.75-12.5 45.25 0L160 210.8l105.4-105.4c12.5-12.5 32.75-12.5 45.25 0s12.5 32.75 0 45.25l-105.4 105.4L310.6 361.4z')
                    span.num-comment= `${blog.nComment} bình luận`
                    span.comment-note (Nếu thấy bình luận span các bạn bấm report giúp mình nhé)
                    if (user && !comment)
                        .comment__write
                            .comment__write--main
                                img.comment__img(src=`/images/users/${user.photo}` alt=`${user.name}`)
                                input.comment__input(type='text' placeholder='Viết bình luận của bạn')
                            .comment__choice
                                button.comment__btn.comment__btn--del Hủy 
                                button.comment__btn.comment__btn--take Bình luận
                    ul.comment__list
                        each value in blog.interactive 
                            if (value.comment !== "")
                                li.comment__item
                                    img.comment__img(src=`/images/users/${value.user.photo}` alt='')
                                    .comment__detail
                                        .comment__detail--main
                                            a.comment__detail--title(href=`/user/${value.user.id}` id=`${value.user.id}`)= value.user.name
                                            span.comment__detail--content= value.comment
                                        .comment__interact
                                            a.comment__like(href='#') Thích 
                                            a.comment__reply(href='#') Trả lời
                                            span.comment__time(href='#') 23 ngày trước

    span(class="idBlog" style="display: none")= blog._id
