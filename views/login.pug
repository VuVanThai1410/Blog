        // Link CSS
        
        // Link FONTS
        link(rel="preconnect" href="https://fonts.googleapis.com")
        link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
        link(href="https://fonts.googleapis.com/css2?family=Montserrat:wght@200;300;400;500;600;700;800;900&display=swap" rel="stylesheet")
        // Link FONTS   
  
    body
        .background.d-flex.justify-content-center.align-items-center.container
            .row 
                form#login-form.form(action='' method='POST')
                    .form__logo
                        a.form__logo--link(href='/')
                            img.form__logo--img(src='/images/logo-1.PNG' style='width: 80px;')
                    h3.heading Đăng nhập
                    p.desc Cùng nhau chia sẻ kiến thức miễn phí ❤️

                    .spacer

                    .form-group
                        label.form-label(for='email') Email
                        input#email.form-control(name='email' rules='required|email' type='text' placeholder='VD: email@domain.com')
                        span.form-message
                    .form-group
                        label.form-label(for='password') Mật khẩu
                        input#password.form-control(name='password' rules='required|min:6' type='password' placeholder='Nhập mật khẩu')
                        span.form-message
                    button.form-submit Đăng nhập

                    span(style="float: right; display: flex; font-size: 13px; padding-top: 10px;") Chưa có tài khoản?
                        a(href="/signup" style="padding-left: 5px;") Đăng kí
                    a(style="float: left; display: flex; font-size: 13px; padding-top: 10px;" href="/forgotPassword") Quên mật khẩu?
                    
    
  
